<Window  x:Class="MilyUnaNochesWPFApp.Views.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mensaje"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" Width="394">

    <Border x:Name="MainBorder" CornerRadius="10" Padding="20" BorderThickness="1">
        <Grid Margin="-11,0,-11,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="IconImage"
               Width="58"
               Height="57"
               Margin="10"
               Grid.Column="0"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                <TextBlock x:Name="MessageText"
                       FontSize="15"
                       FontFamily="Bodoni MT Condensed"
                       FontWeight="Bold"
                       Foreground="Black"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Width="198"
                       Height="32"/>
                <Button x:Name="btn_Accept" 
                    Content="Aceptar"
                    Visibility="Visible"
                    Width="62"
                    Height="21"
                    FontSize="16"
                    FontFamily="Bodoni MT Condensed"
                    Background="White"
                    BorderBrush="Black"
                    Cursor="Hand"
                    Margin="0,10,0,0"
                    Click="Close_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" Direction="270" ShadowDepth="5" Color="Black" Opacity="0.6"/>
                    </Button.Effect>
                </Button>

                <Button  x:Name="btn_yes"
                    Content="Sí"
                    Visibility="Collapsed"
                    Width="31"
                    Height="21"
                    FontSize="16"
                    FontFamily="Bodoni MT Condensed"
                    Background="White"
                    BorderBrush="Black"
                    Cursor="Hand"
                    Margin="0,10,0,0"
                    Click="Yes_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" Direction="270" ShadowDepth="5" Color="Black" Opacity="0.6"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
            <Button  x:Name="btn_no"
                Content="No"
                Visibility="Collapsed"
                Width="31"
                Height="21"
                FontSize="16"
                FontFamily="Bodoni MT Condensed"
                Background="White"
                BorderBrush="Black"
                Cursor="Hand"
                Margin="191,49,74,7"
                Click="No_Click" Grid.Column="1">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="5" Direction="270" ShadowDepth="5" Color="Black" Opacity="0.6"/>
                </Button.Effect>
            </Button>
        </Grid>
    </Border>

</Window>
