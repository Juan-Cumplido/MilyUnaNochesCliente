<Page x:Class="MilyUnaNochesWPFApp.Views.MenuSale"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilyUnaNochesWPFApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MenuSale">

    <DockPanel>
        

    <Grid>
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Images/Background/SaleBackground.png" Stretch="UniformToFill" />
            </Border.Background>
            
        </Border>

        <Image Name="img_goBack" Source="/Images/Icons/goBack.png" MouseDown="Image_MouseDownGoBack" Visibility="Collapsed"
         Cursor="Hand" Margin="370,36,838,606" RenderTransformOrigin="0.5,0.506"/>

            <Image Name="img_GoOut" Source="/Images/Icons/User.png" MouseDown="Image_MouseDown" Visibility="Visible"
         Cursor="Hand" Margin="1176,43,57,611" RenderTransformOrigin="0.5,0.506"/>

            <Label x:Name="lbl_Client" Content="C L I E N T E S"
               Foreground="#ae7d5c"  FontSize="20"  MouseDown="Lbl_Client_Click" Visibility="Visible"
               HorizontalAlignment="Left" Margin="590,55,0,0" 
                Cursor="Hand" 
               VerticalAlignment="Top" Height="44" Width="144"/>

        <Label x:Name="lbl_Sale" Content="V E N T A S"
                   Foreground="#ae7d5c"  FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Left" Margin="849,53,0,0" 
                    Cursor="Hand" 
                   VerticalAlignment="Top" Height="44" Width="123"/>



        <!-- Botón realizar venta -->
        <Label x:Name="lbl_RegisterSale" Content="Realizar venta" FontFamily="Bodoni MT Condensed"
           Foreground="#ae7d5c"  FontSize="30" MouseDown="lbl_RegisterSale_Click"
           HorizontalAlignment="Left" Margin="716,241,0,0" 
            Cursor="Hand" 
           VerticalAlignment="Top" Height="44" Width="160"/>
        <Label x:Name="lbl_consultClient" Content="Consultar Ventas" FontFamily="Bodoni MT Condensed"
           Foreground="#ae7d5c"  FontSize="30" MouseDown="lbl_ConsultSale_Click"
           HorizontalAlignment="Left" Margin="417,241,0,0" 
            Cursor="Hand" 
           VerticalAlignment="Top" Height="44" Width="160"/>



            <Frame x:Name="Frame" NavigationUIVisibility="Hidden" Margin="0,293,0,0" />

    </Grid>
    </DockPanel>



</Page>
