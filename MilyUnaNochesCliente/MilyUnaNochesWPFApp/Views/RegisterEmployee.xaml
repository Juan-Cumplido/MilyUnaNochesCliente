<Page x:Class="MilyUnaNochesWPFApp.Views.RegisterEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilyUnaNochesWPFApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="438" d:DesignWidth="1280"
      Background="#fdf8ef"
      Title="RegisterClient">

    <Grid>

        <Label Content="Nombre" HorizontalAlignment="Left" Height="40"  Margin="43,22,0,0" VerticalAlignment="Top" Width="64" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="112,22,902,376">
            <DockPanel>
                <TextBox x:Name="txtb_Name" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Primer apellido" HorizontalAlignment="Left" Height="40"  Margin="408,22,0,0" VerticalAlignment="Top" Width="118" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="535,22,479,376">
            <DockPanel>
                <TextBox x:Name="txtb_firstSurname" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Segundo apellido" HorizontalAlignment="Left" Height="40"  Margin="830,22,0,0" VerticalAlignment="Top" Width="134" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="966,22,48,376">
            <DockPanel>
                <TextBox x:Name="txtb_secondSurname" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Telefono" HorizontalAlignment="Left" Height="40"  Margin="40,97,0,0" VerticalAlignment="Top" Width="70" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="112,97,902,301">
            <DockPanel>
                <TextBox x:Name="txtb_telephone" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Correo" HorizontalAlignment="Left" Height="40"  Margin="467,97,0,0" VerticalAlignment="Top" Width="54" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="535,97,479,301">
            <DockPanel>
                <TextBox x:Name="txtb_email" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Calle" HorizontalAlignment="Left" Height="40"  Margin="910,97,0,0" VerticalAlignment="Top" Width="47" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="966,97,48,301">
            <DockPanel>
                <TextBox x:Name="txtb_street" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Número" HorizontalAlignment="Left" Height="40"  Margin="40,179,0,0" VerticalAlignment="Top" Width="64" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="112,179,902,219">
            <DockPanel>
                <TextBox x:Name="txtb_number" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Código postal" HorizontalAlignment="Left" Height="40"  Margin="419,179,0,0" VerticalAlignment="Top" Width="107" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="535,179,479,219">
            <DockPanel>
                <TextBox x:Name="txtb_postalCode" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Ciudad" HorizontalAlignment="Left" Height="40"  Margin="893,179,0,0" VerticalAlignment="Top" Width="64" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="966,179,48,219">
            <DockPanel>
                <TextBox x:Name="txtb_city" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Contraseña" HorizontalAlignment="Left" Height="40"  Margin="870,265,0,0" VerticalAlignment="Top" Width="87" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>
        <Label HorizontalAlignment="Left" Height="123" Margin="966,305,0,0" 
               VerticalAlignment="Top" Width="245" FontFamily="Bodoni MT Condensed" 
               FontSize="25" Background="{x:Null}" Foreground="#FFAE7D5C">
            <TextBlock Width="257">
                <Run Text="La contraseña debe de contener:" />
                <LineBreak/>
                <Run Text="• Al menos 8 caracteres" />
                <LineBreak/>
                <Run Text="• Una mayúscula" />
                <LineBreak/>
                <Run Text="• Un número" />
            </TextBlock>
        </Label>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="966,265,48,133">
            <DockPanel>
                <TextBox x:Name="txtb_password" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Usuario" HorizontalAlignment="Left" Height="40"  Margin="43,265,0,0" VerticalAlignment="Top" Width="67" FontFamily="Bodoni MT Condensed" FontSize="25"  Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1" Background="#ae7d5c" CornerRadius="15" Margin="112,265,902,133">
            <DockPanel>
                <TextBox x:Name="txtb_User" Width="247" Height="26" FontSize="25" Background="Transparent" BorderThickness="0" Foreground="Black" FontFamily="Bodoni MT Condensed" />
            </DockPanel>
        </Border>

        <Label Content="Tipo de Empleado" HorizontalAlignment="Left" Height="40"  
       Margin="392,265,0,0" VerticalAlignment="Top" Width="134" 
       FontFamily="Bodoni MT Condensed" FontSize="25"  
       Background="{x:Null}" Foreground="#FFAE7D5C"/>

        <Border BorderThickness="1"  CornerRadius="15" Margin="535,265,479,135">
            <DockPanel>
                <ComboBox x:Name="cmb_EmployeeType" Width="247" Height="30" FontSize="25" Background="#ae7d5c"
                   BorderThickness="0" Foreground="Black" 
                  FontFamily="Bodoni MT Condensed">
                    <ComboBoxItem Content="Gerente" />
                    <ComboBoxItem Content="Cajero" />
                    <ComboBoxItem Content="Bodeguista" />
                </ComboBox>
            </DockPanel>
        </Border>

        <Button Content="Registrar"  Cursor="Hand" Click="Registrar_Click" Margin="595,373,581,32" Background="Transparent" Foreground="#AE7D5C" FontSize="25" FontFamily="Bodoni MT Condensed" BorderThickness="1"/>
    </Grid>
</Page>
