<Page x:Class="MilyUnaNochesWPFApp.Views.ConsultEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilyUnaNochesWPFApp.Views"
      mc:Ignorable="d" 
       d:DesignHeight="438" d:DesignWidth="1280"
       Background="#fdf8ef"
      Title="ConsultClient">

    <Page.Resources>
        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Image Name="img_GoOut" Source="/Images/Background/Search.png" 
         RenderTransformOrigin="0.5,0.506" Margin="95,4,876,367"/>

        <TextBox x:Name="txtb_searchForClient" FontSize="25" Background="Transparent" 
         BorderThickness="0" Text="Nombre o telefono (ej. Juan)" FontFamily="Bodoni MT Condensed" 
        Foreground="#FF6A6565" GotFocus="SearchForClient_GotFocus" LostFocus="SearchForClient_LostFocus"
          Margin="149,22,901,385"/>



        <DataGrid x:Name="ProviderDataGrid" 
        CanUserResizeColumns="False"
        CanUserSortColumns="False"
        CanUserReorderColumns="False"
        AutoGenerateColumns="False"
        HeadersVisibility="Column"
        GridLinesVisibility="None"
        CanUserAddRows="False"
        IsReadOnly="True"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Margin="97,0,97,0"
        Width="1083"
        Height="278"
        Background="#fdf8ef"
        BorderThickness="0"
        FontSize="22"
        FontFamily="Bodoni MT Condensed" SelectionChanged="ProviderDataGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" 
                               Width=".7*" 
                               CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Primer Apellido" 
                               Width=".7*" 
                               CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Segundo Apellido" 
                               Width=".7*" 
                               CellStyle="{StaticResource CenteredCellStyle}"/>

                <DataGridTextColumn Header="Telefono" 
                               Width=".5*" 
                               CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Correo" 
                               Width="*" 
                               CellStyle="{StaticResource CenteredCellStyle}"/>
                <DataGridTextColumn Header="Direccion" 
                               Width="1.5*" 
                               CellStyle="{StaticResource CenteredCellStyle}"/>
            </DataGrid.Columns>

        </DataGrid>
        <StackPanel Margin="0,358,517,15"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button Content="Eliminar"  Cursor="Hand" Click="Eliminar_Click" Margin="10" Background="Transparent" Foreground="#AE7D5C" FontSize="25" FontFamily="Bodoni MT Condensed" BorderThickness="1" Height="33" Width="84"/>
            <Button Content="Editar"  Cursor="Hand" Click="Editar_Click" Margin="10" Background="Transparent" Foreground="#AE7D5C" FontSize="25" FontFamily="Bodoni MT Condensed" BorderThickness="1" Height="33" Width="84"/>
        </StackPanel>
    </Grid>
</Page>
